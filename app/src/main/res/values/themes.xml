<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Verified" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text.22.Blue.GoogleSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="Text.22.White.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="fontFamily">@font/product_sans_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.11.linkBlue.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="fontFamily">@font/product_sans_light</item>
        <item name="android:textColor">@color/link_blue</item>
    </style>

    <style name="Text.9.lightGrey.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_9sp</item>
        <item name="fontFamily">@font/product_sans_thin</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="Text.14.Blue.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/product_sans_medium</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Text.14.Grey.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/product_sans_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.24.Blue.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="fontFamily">@font/product_sans_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.16.Grey.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="fontFamily">@font/product_sans_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="EditText.16.Grey.ProductSans" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="fontFamily">@font/product_sans_light</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">#6E6F77</item>
    </style>
</resources>